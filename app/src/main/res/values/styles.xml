<resources>

    <!-- Widget -->

    <style name="Widget.PagSeguro.Toolbar" parent="Widget.MaterialComponents.Toolbar.Primary">
        <item name="popupTheme">@style/AppTheme.PopupTheme</item>
    </style>

    <style name="Widget.PagSeguro.MaterialButton" parent="Widget.MaterialComponents.Button">
        <item name="android:minHeight">56dp</item>
        <item name="cornerRadius">28dp</item>
    </style>

    <!-- Beer Detail -->

    <style name="DetailPrimaryLabel">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">?android:attr/textColorPrimary</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="DetailSecondaryLabel">
        <item name="android:textSize">10sp</item>
        <item name="android:textColor">?android:attr/textColorTertiary</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="DetailPrimaryValue">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">?android:attr/textColorPrimary</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="DetailSecondaryValue">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">?android:attr/textColorTertiary</item>
    </style>

</resources>
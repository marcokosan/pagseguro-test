<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.marcokosan.pagsegurotest">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:name="com.marcokosan.pagsegurotest.MainApplication"
        android:allowBackup="false"
        android:icon="@mipmap/ic_launcher"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity android:name="com.marcokosan.pagsegurotest.ui.LauncherActivity"
            android:theme="@style/AppTheme.Launcher"
            android:screenOrientation="sensorPortrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name="com.marcokosan.pagsegurotest.ui.home.HomeActivity" />

        <activity android:name="com.marcokosan.pagsegurotest.ui.beerdetails.BeerDetailsActivity"
            android:theme="@style/AppTheme.BeerDetails"/>

    </application>

</manifest>